<% active_table_for :learning_users_table, @tbl,
      :refresh_url => url_for(:action => 'display_learning_users_table',:path => [ @mod.id ]),
      :actions => [ ['Delete','delete','Delete the selected users learning modules and all infomation with their account?' ]] do |t| -%>
<tr <%= highlight_row 'lu',t.id %>>
  <td><%= entry_checkbox 'lu',t.id %></td>
  <td><%= link_to v(t.end_user.name), :action => 'user',:path => [ @mod.id, t.id ]  %></td>
  <td><%= t.last_lesson.title if t.last_lesson %></td>
  <td align='center'><%= t.last_section_position %></td>
  <td align='center'><%= t.last_lesson_position %></td>
  <td>
    <% if t.last_view_at %>
      <%= distance_of_time_in_words_to_now(t.last_view_at).capitalize %>    
      (<%= t.last_view_at.strftime(DEFAULT_DATE_FORMAT.t) %>)
    <% end -%>
  </td>
  <td><%= t.created_at.strftime(DEFAULT_DATE_FORMAT.t) %></td>
  <td><%= t.started? ? 'Yes' : 'No' %></td>
  <td><%= t.finished? ? 'Yes' : 'No' %></td>
</tr>
<% end -%>
