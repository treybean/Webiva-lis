<div class='cms_form'>
  <% paragraph_options_form_for "Day Schedule Options",:day_schedule ,@options do |f| -%>
    <%= f.select :booking_page_id, @pages, :description => 'Booking page (leave blank to prevent booking links)' %>
    <%= f.radio_buttons :display, [['Show Availabilities and Bookings','all'],
                                   ['Show Availabilities only','avail'],
                                   ['Group Availabilities','group'],
                                   ['Group Availabilities - Show User Booked','schedule'],
                                   ['Show User Bookings only','user']
                                   ],:label => 'Display',
                                   :separator => '<br/>' %>
    <%= f.text_field :block_minutes, :description => 'Number of minutes for each block' %>
    <%= f.text_field :signup_length, :description => 'Length of time someone is signing up for' %>
    <%= f.text_field :block_width, :description => 'Width of each block in pixels' %>
    <%= f.text_field :block_height, :description => 'Height of each block in pixels' %>
  <% end -%>
</div>
