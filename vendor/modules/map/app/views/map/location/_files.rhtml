<div id='location_<%= field %>' style='min-height:80px; border:1px solid #000000;  margin:3px;  overflow:auto;'>
<% files.each do |file| -%>
<% if file %>
<div class='attachment' id='attachment_<%= file.id %>'>
<table>
   <tr>
    <td>
    <% case file.file_type 
     when 'doc' -%>
        <img id='handle_item_<%= file.id %>'  src='<%= theme_src("/images/icons/filemanager/document.gif") %>' align='top' width='64' height='64'>
  <% when 'img' -%>
      <div class='fm_image' id='handle_item_<%= file.id %>' ><%= image_tag file.url(:thumb), :align => 'middle', :id => "thumb_image_#{file.id}"  %></div>
  <% end -%>      
     </td>
     <td>
        <a href='javascript:void(0);' onclick='ProductEditor.showAttachmentPopup(<%= file.id %>);'><%= file.name %></a><br/>
     </td>
    </tr>
</table>
 </div>
 <% else -%>
 <% file.destroy if file.id %>
 <% end -%>
 <% end -%>
 </div>
 <input type='hidden' name='location[image_list]' id='location_image_list' value=''/>
