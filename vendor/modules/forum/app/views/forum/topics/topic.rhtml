<div class='admin_content'>
<% admin_form_for :topic, @topic, :html => { :class => 'admin_form' } do |f| -%>
<%= f.text_field :subject, :vertical => true, :required => true %>
<%= f.text_field :permalink, :vertical => true if @topic.id %>
<%= f.end_user_selector :posted_by, :id_field => 'end_user_id', :vertical => true, :required => true %>
<%= f.text_area :body, :vertical => true %>
<%= f.text_field :sticky, :vertical => true %>
<%= f.text_area :tag_names, :rows => 5, :vertical => true, :label => 'Tags', :description => 'Comma separated list of tags' %>
<%= f.spacer %>
<%= f.submit_tag @topic.id ? 'Update Topic' : 'Create Topic', :vertical => true%>
<% end -%>
</div>
