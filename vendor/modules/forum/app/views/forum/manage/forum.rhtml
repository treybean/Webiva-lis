<div class='admin_content'>
<% admin_form_for :forum, @forum, :html => { :class => 'admin_form' } do |f| -%>
<%= f.text_field :name, :vertical => true, :required => true %>
<%= f.text_area :description, :vertical => true %>
<%= f.text_field :weight, :vertical => true %>
<%= f.check_boxes :main_page, [['Forum is displayed on the category page', true]], :vertical => true, :single => true %>
<%= f.filemanager_image :image_id, :vertical => true %>
<%= f.submit_tag @forum.id ? 'Update Forum' : 'Create Forum', :vertical => true%>
<% end -%>
</div>
