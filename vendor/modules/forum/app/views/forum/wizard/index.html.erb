<div class='admin_content'>

<% admin_form_for :wizard, @forum_wizard do |f|  -%>

  <%= f.select :forum_category_id, ForumCategory.select_options_with_nil('Forum Category'), :label => 'Forum Category to Add' -%>
  <%= f.add_page_selector :add_to -%>
  <%= f.text_field :forum_page_url, :label => "Forum Page", :size => 10 -%>
  <%= f.text_field :new_page_url, :label => "New Topic/Post Page", :size => 10 -%>
  <%= f.text_field :edit_page_url, :label => "Edit Post Page", :size => 10 -%>
  <%= f.spacer -%>
  <%= f.cancel_submit_buttons 'Cancel', 'Add to Site' -%>

<% end -%>
</div>
