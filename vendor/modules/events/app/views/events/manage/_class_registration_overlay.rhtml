<div style='padding:10px;' class='admin_form'>
  <b><%= @event.name %></b> / <%= @event.by %> / <%= @event.location %><br/>
  <%= @event.event_on.strftime("%A %B %d".t) %> at <%= @event.start_time_display %><br/><br/>
  
  <div style='width:350px; padding:10px; border:1px solid #CCCCCC; margin-left:5px;' id='class_registration'>
    <%= render :partial => 'class_registration' %>
  </div>
  <div style='text-align:right;'>
    <a href='javascript:void(0);' onclick='EventsViewer.refreshCalendar(); SCMS.closeOverlay();'>Close</a>
  </div>  
</div>
